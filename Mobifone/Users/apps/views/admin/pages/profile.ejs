<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<header>
        <% include ../partials/header %>
</header>
<body class="fix-header">

    <main>
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row bg-title">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title">Cá Nhân</h4> </div>
                    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                        <ol class="breadcrumb">
                            <li><a href="index">Trang Chủ</a></li>
                            <li class="active">Cá Nhân</li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->
                <!-- .row -->
                <div class="row">

                    <div class="col-md-4 col-xs-12">
                        <div class="white-box">
                            <div class="user-bg">
                              <!-- <img width="100%" alt="user" src="http://placehold.it/670x438/cccccc/000000"> -->
                                <div class="overlay-box">
                                    <div class="user-content">
                                        <a href="javascript:void(0)">
                                          <!-- <img src="http://placehold.it/320x320/cccccc/000000" class="thumb-lg img-circle" alt="img"> -->
                                        </a>
                                        <h4 class="text-white"><%= data.name%></h4>
                                        <h5 class="text-white"><%= data.email%></h5> </div>
                                </div>
                            </div>
                            <div class="user-btm-box">
                                <div class="col-md-12 col-sm-4 text-center">
                                    <p class="text-purple"><i class="ti-facebook"></i></p>
                                    <h3><%= data.id%></h3> </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8 col-xs-12">
                        <div class="white-box">
                            <form class="form-horizontal form-material" method="post">
                                <div class="form-group">
                                    <label class="col-md-12" for="hoten">Họ và Tên</label>
                                    <div class="col-md-12">
                                        <input type="text" id="hoten" name="hoten" placeholder="<%= data.name%>" class="form-control form-control-line"> </div>
                                </div>
                                <div class="form-group">
                                    <label for="email" class="col-md-12">Email</label>
                                    <div class="col-md-12">
                                        <input type="email" id="email" name="email" placeholder="<%= data.email%>" class="form-control form-control-line" name="example-email" id="example-email"> </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-12" for="pass">Mật Khẩu</label>
                                    <div class="col-md-12">
                                        <input type="password" id="pass" name="pass" value="<%= data.id%>" class="form-control form-control-line"> </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-12" for="phone">Số Điện Thoại</label>
                                    <div class="col-md-12">
                                        <input type="number" id="phone" name="phone"  placeholder="<%= data.phone%>" class="form-control form-control-line"> </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-12" for="diachi">Địa Chỉ</label>
                                    <div class="col-sm-12">
                                      <input type="text" id="diachi" name="diachi" placeholder="<%= data.address_street%>, <%= data.address_suite%>, <%= data.address_city%> " class="form-control form-control-line" name="example-email" id="example-email"> </div>

                                        <!-- <select id="diachi" name="diachi" class="form-control form-control-line">
                                            <option value="1">London</option>
                                            <option value="2">India</option>
                                            <option value="3">Usa</option>
                                            <option value="4">Canada</option>
                                            <option value="5">Thailand</option>
                                        </select> -->
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <button class="btn btn-info">Cập nhật thông tin</button>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>

                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->

</div>


    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>

</body>
</html>
